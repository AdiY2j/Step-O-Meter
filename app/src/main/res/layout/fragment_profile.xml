<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.ProfileFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlProfileDisplay"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="#FFFFB500"
                    android:layout_marginTop="32dp"
                    android:id="@+id/imgProfile"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:text="Profile Name"
                    android:layout_marginTop="16dp"
                    android:textSize="24sp"
                    android:id="@+id/tvProfileName"
                    android:layout_below="@id/imgProfile"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-16dp"
                        app:cardCornerRadius="16dp"
                        android:elevation="12dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:id="@+id/tv_accountInfoLabel"
                                android:text="Account Info"
                                android:textSize="24sp"
                                android:textColor="#000"
                                android:layout_margin="16dp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <View
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:id="@+id/labelSeparator"
                                android:layout_below="@+id/tv_accountInfoLabel"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"/>

                            <LinearLayout
                                android:layout_marginTop="16dp"
                                android:padding="8dp"
                                android:id="@+id/llProfileName"
                                android:layout_below="@+id/labelSeparator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgNameIcon"
                                    android:src="@drawable/ic_person_28dp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvAccName"
                                    android:layout_marginLeft="16dp"
                                    android:text="Name"
                                    android:textSize="20sp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".7"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:padding="8dp"
                                android:id="@+id/llProfileDOB"
                                android:layout_below="@+id/llProfileName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgDobIcon"
                                    android:src="@drawable/ic_calendar_28dp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvAccDob"
                                    android:layout_marginLeft="16dp"
                                    android:text="12/08/2017"
                                    android:textSize="20sp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".7"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:padding="8dp"
                                android:id="@+id/llProfileHeight"
                                android:layout_below="@+id/llProfileDOB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/imgHeightLabel"
                                    android:textColor="#000"
                                    android:text="Height"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvAccHeight"
                                    android:layout_marginLeft="16dp"
                                    android:text="6 feets"
                                    android:textSize="20sp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".7"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:padding="8dp"
                                android:id="@+id/llProfileWeight"
                                android:layout_below="@+id/llProfileHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/imgWeightLabel"
                                    android:textColor="#000"
                                    android:text="Weight"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvAccWeight"
                                    android:layout_marginLeft="16dp"
                                    android:text="60 KG"
                                    android:textSize="20sp"
                                    android:layout_width="0dp"
                                    android:layout_weight=".7"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <Button
                                android:layout_margin="8dp"
                                android:id="@+id/btn_update"
                                android:text="@string/btn_update_label"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="8dp"
                                android:textSize="20sp"
                                android:elevation="8dp"
                                android:layout_alignParentBottom="true"
                                android:textColor="#FFFFB500"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
